<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/transparent"
  android:orientation="vertical"
  >

  <FrameLayout
    style="@style/UITheme.Sheet.Header.Wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
      style="@style/UITheme.Sheet.Header.Inner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
        android:id="@+id/title"
        style="@style/UITheme.Sheet.Header.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        />

      <TextView
        android:id="@+id/description"
        style="@style/UITheme.Sheet.Header.Paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        />
    </LinearLayout>

    <View
      android:id="@+id/progress"
      style="@style/UITheme.Sheet.Header.Line"
      android:layout_width="wrap_content"
      android:visibility="gone"
      />

    <dev.cgomez.uber.base.blocks.ProgressLine
      android:id="@+id/indeterminate"
      style="@style/UITheme.Sheet.Header.Line"
      android:layout_width="match_parent"
      android:visibility="gone"
      />
  </FrameLayout>

  <LinearLayout
    style="@style/UITheme.Sheet.Body.Wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:id="@+id/body"
      style="@style/UITheme.Sheet.Body.Text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@sample/medium_text"
      />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/primary_button"
      style="@style/UITheme.Sheet.Button.Primary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Send"
      />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/secondary_button"
      style="@style/UITheme.Sheet.Button.Secondary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Cancel"
      />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/tertiary_button"
      style="@style/UITheme.Sheet.Button.Tertiary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Decline"
      />

  </LinearLayout>
</LinearLayout>