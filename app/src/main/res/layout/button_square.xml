<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  style="@style/UITheme.Container.Margin"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--Primary-->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/primary"
      android:textAppearance="@style/UITheme.Typography.Label"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/secondary"
      android:textAppearance="@style/UITheme.Typography.Label"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly.Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly.Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <!--Secondary-->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/tertiary"
      android:textAppearance="@style/UITheme.Typography.Label"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly.Tertiary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <com.google.android.material.button.MaterialButton
      style="@style/UITheme.Button.IconOnly.Tertiary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      app:icon="@drawable/hearth"
      />

    <Space
      style="@style/UITheme.Spacer.40"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <!--Tertiary-->

  </LinearLayout>
</ScrollView>